<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= google_fonts(["Rosario", "IM Fell English"]) %>
  <%= stylesheet_link_tag 'dev', :media => 'screen' %>
  <%= stylesheet_link_tag 'formtastic/formtastic', :media => 'screen' %>
  <%= stylesheet_link_tag 'formtastic/formtastic_changes', :media => 'screen' %>
  <%= csrf_meta_tag %>
</head>
<body>

  <h1>Field Poetics</h1>

  <%= render 'layouts/header' %>

  <section>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </section>

  <%= debug(params) if Rails.env.development? %>

</body>
</html>
