<%= semantic_form_for @administrator do |form| %>
  <%= form.inputs do %>
    <%= form.input :username, :label => "Username", :required => true %>
    <%= form.input :password, :as => :password, :label => "Password", :required => true %>
    <%= form.input :password_confirmation, :as => :password, :label => "Confirm Password", :required => true %>
    <%= form.input :email, :label => "Email", :required => true %>
    <%= form.input :firstname, :label => "First Name", :required => true %>
    <%= form.input :lastname, :label => "Last Name", :required => true %>
    <%= form.input :is_superuser, :as => :hidden, :value => 1 %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :value => "Continue" } %>
  <% end %>
<% end %>
